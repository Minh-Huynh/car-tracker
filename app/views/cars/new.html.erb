<%= render 'shared/header' %>
<%= render 'shared/errors' %>
<div class="col-md-3 col-md-offset-4">
<div class="panel panel-primary">
  <div class="panel-heading">
    New Vehicle
    </div>
      <div class="panel-body text-center">
      <%= render 'shared/obj_errors', obj: @car %>
    <%= form_for @car, class:"form-horizontal input-large" do |f| %>
    <div class="form-group">
       <%= f.label :year %><br>
      <%= f.text_field :year %>
    </div>
     <div class="form-group">
      <%= f.label :make %><br>
      <%= f.text_field :make %>
      </div>
       <div class="form-group">
       <%= f.label :model %><br>
      <%= f.text_field :model %>
      </div>
      <%= f.submit class:'btn btn-success' %>
       <% end %>
      </div>
   
    </div>
</div>


