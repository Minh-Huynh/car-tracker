<%= render 'shared/header' %>
<%= render 'shared/errors' %>
<div class="col-md-3 col-md-offset-4">
  <div class="panel panel-primary">
    <div class="panel-heading">
    New Vehicle
    </div>
    <div class="panel-body text-center">
      <%= render 'shared/obj_errors', obj: @car %>
      <%= form_for @car, class:"form-inline" do |f| %>
        <div class="form-group">
          <%= f.label :year %><br>
          <%= f.text_field :year %>
        </div>
        <div class="form-group">
          <%= f.label :make %><br>
          <%= f.text_field :make %>
        </div>
        <div class="form-group">
          <%= f.label :model %><br>
          <%= f.text_field :model %>
        </div>
        <%= f.submit class:"btn btn-success" %>
        <% end %>
       <br>
      <%= form_for @car, method:"delete", class:"form-inline" do |f| %>
        <%= f.submit "Delete", class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>